{
  "name": "elder-cards",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@apollo/link-schema": "^2.0.0-beta.3",
    "@fluentui/react-northstar": "^0.51.2",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "lodash": "^4.17.20",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.5",
    "react-window-infinite-loader": "^1.0.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.3",
    "@graphql-codegen/typescript": "^1.17.3",
    "@graphql-codegen/typescript-operations": "^1.17.3",
    "@graphql-codegen/typescript-react-apollo": "^1.17.3",
    "@graphql-codegen/typescript-resolvers": "^1.17.3",
    "@types/enzyme": "^3.10.7",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "^1.8.2",
    "@types/react-window-infinite-loader": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.4.0",
    "concurrently": "^5.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "prettier": "^2.1.2",
    "react-scripts": "3.4.0",
    "typescript": "~4.0.3"
  },
  "scripts": {
    "start": "concurrently \"yarn gql:watch\" \"react-scripts start\"",
    "build": "yarn gql && react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint --color src/** --quiet --no-error-on-unmatched-pattern",
    "gql": "graphql-codegen --config codegen.yml",
    "gql:watch": "graphql-codegen --config codegen.yml --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.{d.ts}",
      "!**/node_modules/**",
      "!**/apollo/schema/**"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coveragePathIgnorePatterns": [
      "serviceWorker.ts",
      "./src/index.tsx"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier":{
    "endOfLine": "auto",
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "singleQuote": false
  }
}
